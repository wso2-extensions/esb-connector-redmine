<component name="redmine-groups" type="synapse/template">
    <subComponents>
        <component name="getGroups">
            <file>getGroups.xml</file>
            <description>Returns the list of groups.</description>
        </component>
        <component name="getSingleGroup">
            <file>getSingleGroup.xml</file>
            <description>Gets details of a single group.</description>
        </component>
        <component name="createGroup">
            <file>createGroup.xml</file>
            <description>Creates a group.</description>
        </component>
        <component name="deleteGroup">
            <file>deleteGroup.xml</file>
            <description>Deletes an existing group.</description>
        </component>
        <component name="addUserToGroup">
            <file>addUserToGroup.xml</file>
            <description>Adds an existing user to a group.</description>
        </component>
    </subComponents>
</component>